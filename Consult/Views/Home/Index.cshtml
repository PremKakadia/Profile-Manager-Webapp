@model IEnumerable<Consult.Models.Team>
@{
    ViewData["Title"] = "Home Page";
}


<div class="section section-about-us">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto text-center">
                <h1 class="title">Who we are?</h1>
                <h5 class="description">
                    The Consulting Club of N.M. College is a forum for the genesis, development and evolution
                    of budding management consultants and business strategy enthusiasts. The Consulting Club
                    aims at fostering and developing a culture of management consultancy among the greater
                    student community. Moreover, through our initiatives we primarily focus on providing students
                    & other leaners with quality resources, guidance & a network that would enable them to venture
                    on this path further and equip them to be a better problem solver.
                    <br /><br />
                    This club has two wings, an internal wing and an external wing, that cater to its different needs.
                    A Consulting Vertical and an Administrative Vertical make up the external wing, while the
                    Resource Development Vertical makes up the internal wing. The Consulting Vertical has a
                    team of students who are senior and assistant consultants that fulfill the client-facing roles of
                    the club. Real-world companies and real-world problems are the focus of this group of
                    consultants. The Administrative Vertical comprises Business Development, Human Resource,
                    Management and the Technical Division. Training and development, social media, public
                    relations, as well as editorials and casebooks are all part of the Resource Development Vertical.
                </h5>
            </div>
        </div>

                    <p class="blockquote">
                        "Oden wouldn't be oden... if it wasn't boiled!"
                        <br>
                        <br>
                        <small>- ODEN</small>
                    </p>




        <div class="responsive-container-block outer-container">
            <div class="responsive-container-block inner-container">
                <p class="text-blk section-head-text">
                    Meet Our Expert Consultants
                </p>
                <p class="text-blk section-subhead-text">
                    Info about Consultancy
                </p>
                <div class="responsive-container-block">

                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                            <div class="card card-profile shadow">
                                <div class="row justify-content-center">
                                    <div class="col-lg-3 order-lg-2">
                                        <div class="card-profile-image">
                                            <div class="profile-pic">
                                                <img src="@item.PhotoUrl" id="output" width="200" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                                    <div class="d-flex justify-content-between">
                                        <a href="https://www.linkedin.com/in/@item.LinkedIn/" class="" target="_blank">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z" /></svg>
                                        </a>
                                        <a href="mailto: @item.Email" target="_blank" class="float-right">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M256 64C150 64 64 150 64 256s86 192 192 192c17.7 0 32 14.3 32 32s-14.3 32-32 32C114.6 512 0 397.4 0 256S114.6 0 256 0S512 114.6 512 256v32c0 53-43 96-96 96c-29.3 0-55.6-13.2-73.2-33.9C320 371.1 289.5 384 256 384c-70.7 0-128-57.3-128-128s57.3-128 128-128c27.9 0 53.7 8.9 74.7 24.1c5.7-5 13.1-8.1 21.3-8.1c17.7 0 32 14.3 32 32v80 32c0 17.7 14.3 32 32 32s32-14.3 32-32V256c0-106-86-192-192-192zm64 192a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z" /></svg>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body pt-0 pt-md-4">
                                    <div class="row">
                                        <div class="col">
                                            <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                                                <div>
                                                    <span class="heading">@item.TeachingExp</span>
                                                    <span class="description">Teaching</span>
                                                </div>
                                                <div>
                                                    <span class="heading">@item.IndustryExp</span>
                                                    <span class="description">Industry</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <h3>
                                            @Html.DisplayFor(modelItem => item.FName)<span class="font-weight-light"> @item.LName</span>
                                        </h3>
                                        <div>
                                            <i class="ni education_hat mr-2"></i>@item.Email
                                        </div>
                                        <div class="h5 font-weight-300">
                                            <i class="ni location_pin mr-2"></i>@item.Aos
                                        </div>
                                        <div class="h5 mt-4">
                                            <i class="ni business_briefcase-24 mr-2"></i>@item.Qualifications
                                        </div>
                                        <hr class="my-4">
                                        <p>@item.AboutMe</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
