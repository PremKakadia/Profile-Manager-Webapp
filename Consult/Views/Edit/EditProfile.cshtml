@model Consult.Models.Team
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var userEmail = HttpContextAccessor.HttpContext.Session.GetString("_UserToken");
}
@{
    ViewData["Title"] = "Edit Profile";
}


<form enctype="multipart/form-data" asp-action="EditProfile" asp-controller="Edit">
    <div class="main-content">
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                    <div class="card card-profile shadow">
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">

                                    <div class="profile-pic card-profile-image">
                                        <label class="-label" for="file">
                                            <span>Change Image</span>
                                        </label>
                                        <input asp-for="Photo" id="file" type="file" onchange="loadFile(event)" class="img-input" />
                                        <img src="@Model.PhotoUrl" id="output" width="200" />
                                    </div>
                                    <input asp-for="PhotoUrl" value="@Model.PhotoUrl" hidden />

                                </div>
                            </div>
                        </div>
                        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                            <div class="d-flex justify-content-between">
                                <a href="https://www.linkedin.com/in/@Model.LinkedIn" target="_blank">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z" /></svg>
                                </a>
                                <a href="mailto: @Model.Email" target="_blank">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M256 64C150 64 64 150 64 256s86 192 192 192c17.7 0 32 14.3 32 32s-14.3 32-32 32C114.6 512 0 397.4 0 256S114.6 0 256 0S512 114.6 512 256v32c0 53-43 96-96 96c-29.3 0-55.6-13.2-73.2-33.9C320 371.1 289.5 384 256 384c-70.7 0-128-57.3-128-128s57.3-128 128-128c27.9 0 53.7 8.9 74.7 24.1c5.7-5 13.1-8.1 21.3-8.1c17.7 0 32 14.3 32 32v80 32c0 17.7 14.3 32 32 32s32-14.3 32-32V256c0-106-86-192-192-192zm64 192a64 64 0 1 0 -128 0 64 64 0 1 0 128 0z" /></svg>
                                </a>
                            </div>
                        </div>
                        <div class="card-body pt-0 pt-md-4">
                            <div class="row">
                                <div class="col">
                                    <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                                        <div>
                                            <span class="heading">@Model.TeachingExp</span>
                                            <span class="description">Teaching</span>
                                        </div>
                                        <div>
                                            <span class="heading">@Model.IndustryExp</span>
                                            <span class="description">Industry</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <h3>
                                    @Model.FName<span class="font-weight-light"> @Model.LName</span>
                                </h3>
                                <div>
                                    <i class="ni education_hat mr-2"></i>@Model.Email
                                </div>
                                <div class="h5 font-weight-300">
                                    <i class="ni location_pin mr-2"></i>@Model.Aos
                                </div>
                                <div class="h5 mt-4">
                                    <i class="ni business_briefcase-24 mr-2"></i>@Model.Qualifications
                                </div>
                                <hr class="my-4">
                                <p>
                                    @Model.AboutMe
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">My account</h3>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                                <div class="col-4 text-right">
                                    <a class="btn btn-sm btn-default" asp-area="" asp-controller="Edit" asp-action="Delete" asp-route-id="@userEmail.Replace('.', ',')">Delete</a>
                                    <input type="submit" value="Save" class="btn btn-sm btn-default" />
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Log In -->
                            <h6 class="heading-small text-muted mb-4">Log in details</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">Email address</label>
                                            <input asp-for="Email" value="@userEmail" type="email" id="input-email" class="form-control form-control-alternative" placeholder="username@nmcce.ac.in" disabled>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-username">Password</label>
                                            <input type="password" id="input-username" class="form-control form-control-alternative" placeholder="Password" value="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4">
                            <!-- Personal Information -->
                            <h6 class="heading-small text-muted mb-4">Personal information</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-first-name">First name</label>
                                            <input asp-for="FName" value="@Model.FName" type="text" id="input-first-name" class="form-control form-control-alternative" placeholder="First name">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-last-name">Last name</label>
                                            <input asp-for="LName" value="@Model.LName" type="text" id="input-last-name" class="form-control form-control-alternative" placeholder="Last name">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-country">Area of Specialization</label>
                                            <input asp-for="Aos" value="@Model.Aos" type="text" id="input-country" class="form-control form-control-alternative" placeholder="Finance, Marketing">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-address">Qualifications</label>
                                            <input asp-for="Qualifications" value="@Model.Qualifications" id="input-address" class="form-control form-control-alternative" placeholder="Qualifications" type="text">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-country">Experience (Teaching)</label>
                                            <input asp-for="TeachingExp" value="@Model.TeachingExp" type="number" id="input-postal-code" class="form-control form-control-alternative" placeholder="In years">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-country">Experience (Industry)</label>
                                            <input asp-for="IndustryExp" value="@Model.IndustryExp" type="number" id="input-postal-code" class="form-control form-control-alternative" placeholder="In years">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-country">LinkedIn</label>
                                            <input asp-for="LinkedIn" value="@Model.LinkedIn" type="text" id="input-country" class="form-control form-control-alternative" placeholder="End of URL">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4">
                            <!-- Work Experience -->
                            <h6 class="heading-small text-muted mb-4">About me</h6>
                            <div class="pl-lg-4">
                                <div class="form-group focused">
                                    <label>Areas of Expertise</label>
                                    <textarea asp-for="AboutMe" value="@Model.AboutMe" rows="4" class="form-control form-control-alternative" placeholder="A few words about your Expertise or Work Experience"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

