@model Consult.Models.TeamLogIn
@{
    ViewData["Title"] = "Register";
}

<form asp-action="Register">
    <div class="main-content">
        <div class="mt--7 ms--7">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-white border-0">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">My account</h3>
                        </div>
                        <div class="col-4 text-right">
                            <input type="submit" value="Register" class="btn btn-sm btn-default" />
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Register -->
                    <h6 class="heading-small text-muted mb-4">Registration details</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Email address</label>
                                    <input asp-for="Email" type="email" id="input-email" class="form-control form-control-alternative" placeholder="username@nmcce.ac.in">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group focused">
                                    <label class="form-control-label" for="input-username">Password</label>
                                    <input asp-for="Password" type="password" id="input-username" class="form-control form-control-alternative" placeholder="Password">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">
                    <label class="form-control-label" for="input-email">Already have an account?</label> <a asp-action="LogIn" class="form-control-label text-muted">Log in</a>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}